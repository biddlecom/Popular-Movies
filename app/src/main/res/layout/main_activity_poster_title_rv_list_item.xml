<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/main_activity_poster_title_linear_layout_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_activity_movie_poster_IV"
        android:layout_width="@dimen/movie_detail_poster_width"
        android:layout_height="@dimen/movie_detail_poster_height"
        android:contentDescription="@string/poster_image_view_description"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/main_activity_movie_title_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />
</LinearLayout>
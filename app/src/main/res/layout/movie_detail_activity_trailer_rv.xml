<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/movie_detail_trailer_play_button_RV_Item"
        android:layout_width="@dimen/movie_trailer_play_button_RV_item_size"
        android:layout_height="@dimen/movie_trailer_play_button_RV_item_size"
        android:layout_marginTop="@dimen/movie_trailer_play_button_RV_Item_top_bottom_margin"
        android:layout_marginEnd="@dimen/movie_trailer_play_button_RV_Item_right_end_margin"
        android:layout_marginRight="@dimen/movie_trailer_play_button_RV_Item_right_end_margin"
        android:layout_marginBottom="@dimen/movie_trailer_play_button_RV_Item_top_bottom_margin"
        android:contentDescription="@string/content_description_movie_trailer_image_button"
        android:src="@drawable/ic_trailer_play_circle_outline_black_52dp" />

    <TextView
        android:id="@+id/movie_detail_trailer_RV_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        tools:text="@string/movie_trailer_label" />
</LinearLayout>